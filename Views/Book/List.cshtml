@model List<Book>
@{
    Layout = "CustomerLayout";
}
<div class="col">
    <form asp-controller="Book" asp-action="Search" method="post">
        <div class="form-group">
            <input class="form-control" type="search" required name="keyword" placeholder="Search by book title" />
        </div>
    </form>
</div>

@if (Model.Count == 0)
{
    <h4 class="text text-danger text-center"> No book found !</h4>
}



<div class="card-group text-center">
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="card col-md-4 mb-2">
                <div class="card-img">
                    <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.Id">
                        <img src="@book.Image" width="200" height="200">
                    </a>
                </div>
                <div class="card-body">
                    <h4 class="text-primary">@book.Title</h4>
                </div>
            </div>
            <div class="card-footer">
                <form asp-controller="Cart" asp-action="Add">
                    <input type="hidden" name="id" value="@book.Id" />
                    <input class="form-control" type="number" name="quantity" required min="1" max="10">
                    <div class="form-group mt-3">
                        <input type="submit" class="btn btn-success" value="Add to cart"
                           onclick="    return confirm('Are you sure to purchase this book ?');" />
                    </div>
                </form>
            </div>
        }
    </div>
</div>