@model Project1670.Models.Book
@{
    Layout = "CustomerLayout";
}
<form method="post" asp-controller="Book" asp-action="Add">
    <h2>Add New Book</h2>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Title"></label>
        <input class="form-control" asp-for="@Model.Title" />
        <span class="text-danger" asp-validation-for="@Model.Title"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Price"></label>
        <input class="form-control" asp-for="@Model.Price" />
        <span class="text-danger" asp-validation-for="@Model.Price"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Description"></label>
        <input class="form-control" asp-for="@Model.Description" />
        <span class="text-danger" asp-validation-for="@Model.Description"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Image"></label><br />
        <input class="form-control" asp-for="@Model.Image" />
        <span class="text-danger" asp-validation-for="@Model.Image"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success">Category</label>
        <select class="list-group-item"
                asp-for="CategoryId"
                asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))">
            <option>Select Category</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-warning" value="Add" />
    </div>
</form>