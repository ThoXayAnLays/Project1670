@model List<Cart>

@{
    Layout = "CustomerLayout";
}

@if (Model.Count == 0)
{
    <h4 class="text text-danger text-center"> No book found !</h4>
}
<div class="container text-center">
    <table class="table table-bordered">
        <tr style="background-color: cornflowerblue">
            <th>Book Title</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Date</th>
            <th>Image</th>
            @if (User.Identity.IsAuthenticated && User.IsInRole("StoreOwner"))
            {
                <th colspan="2">Action</th>
            }
        </tr>
        @foreach (var cart in Model)
        {
            <tr>
                <td>@(ViewBag.Books)</td>
                <td>@cart.OrderQuantity</td>
                <td>@cart.OrderPrice</td>
                <td>@cart.OrderDate</td>
                <td>
                    <a asp-controller="Book" asp-action="Detail" asp-route-id="@cart.BookId">
                        <img src="@cart.Book.Image" width="100" height="100" />
                    </a>
                </td>
            </tr>
        }
    </table>
</div>