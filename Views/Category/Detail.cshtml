@model Project1670.Models.Category
<h2>@Model.Id</h2>
<h2>@Model.Name</h2>
<h2>@Model.Description</h2>

<table class="table table-bordered">
    <tr>
        <th colspan="2">Book List</th>
        <th>TOTAL BOOKS: @Model.Books.Count</th>
    </tr>
    <tr>
        <th>Book Id</th>
        <th>Book Title</th>
        <th>Book Image</th>
    </tr>
    @foreach (var book in Model.Books)
    {
        <tr>
            <th>@book.Id</th>
            <th>@book.Title</th>
            <th>
                <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.Id">
                    <img src="@book.Image" width="100" height="100" />
                </a>
            </th>
        </tr>
    }
</table>